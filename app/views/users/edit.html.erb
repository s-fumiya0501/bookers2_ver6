  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name",class:"form-control name"%>
          </div>

          <div class="form-group">
            <label for="user_name">Image</label>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>


          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction",class:"form-control introduction"%>
          </div>

          <div class="form-group">
            <%= f.submit "Update User",class:"btn btn-secondary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>