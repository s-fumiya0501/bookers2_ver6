<h2>Books search for "<%= @tag %>"</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
        <tr>
            <td>
                <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user.get_profile_image(40,48) %>
                <%end%>
            </td>
            <td>
                <%= link_to book.title ,book_path(book)%>
            </td>
            <td>
              <%= book.body%>
            </td>
            <td><%= link_to book.tag ,search_tag_path(tag: book.tag)%></td>
            <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(book_id: book.id),class: "like" ,method: :delete do %>
                    <i class="fas fa-heart like"></i><%= book.favorites.count%>いいね
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(book_id: book.id), method: :post do %>
                    <i class="fas fa-heart unlike"></i><%= book.favorites.count %>いいね
                  <% end %>
                <% end %>
            </td>
            <td>コメント数:<%=book.book_comments.count %></td>
              <td><div id="star-rate<%= book.id%>"></div></td>
              <script>
                $('#star-rate<%= book.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= book.star %>,
                });
              </script>
        </tr>
    <% end %>
  </tbody>
</table>
